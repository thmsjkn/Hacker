<footer class="site-footer">
  <p class="site-info">
    <% if (config.author){ %>
    &copy; <%= new Date().getFullYear() %> <%= config.author %>
    <% } else { %>
    &copy; <%= new Date().getFullYear() %> <%= config.title %>
    <% } %><br />
    <% if (theme.footer) { %>
      <% for (var i in theme.footer){ %>
        <a href="<%- url_for(theme.footer[i]) %>"><%= __(i) %></a>
      <br />
      <% } %>
    <% } %>
    Proudly powered by <a href="https://hexo.io/" target="_blank">Hexo</a> and
    Theme by <a href="https://github.com/thmsjkn/Hacker" target="_blank">Hacker</a>
  </p>
</footer>